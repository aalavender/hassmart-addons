{
  "name": "HA Bridge",
  "version": "5.1.0",
  "slug": "ha-bridge",
  "description": "HA Bridge - Hue Emulator (https://github.com/bwssytems/ha-bridge)",
  "url": "https://github.com/notoriousbdg/hassio-addons/tree/master/ha-bridge",
  "webui": "http://[HOST]:[PORT:80]",
  "arch": [
    "amd64", "i386", "armhf", "aarch64"
  ],
  "map": [
    "share:rw",
    "ssl"
  ],
  "startup": "application",
  "boot": "auto",
  "image": "hassmart/{arch}-addon-ha_bridge",
  "host_network": true,
  "options": {
    "serverip": null,
    "serverport": 80,
    "version": "latest"
  },
  "schema": {
    "serverip": "str",
    "serverport": "int",
    "version": "str"
  }
}
